@model UepaTicksWeb.Models.MUepaDatos


@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        <img style="width:100%" src="~/img/millas-1130x90.jpg" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-9">
        <div class="row">
            <div class="col-md-4">
                <input type="text" id="" placeholder="Buscar por nombre" class="form-control form-controls" />
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.FiltroCategorias, (List<SelectListItem>)ViewBag.Filtro, "Filtrar por categorías", new{@class = "form-control form-controls"})
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.FiltroLugares, (List<SelectListItem>)ViewBag.FiltroLugare, "Filtrar por lugares", new{@class = "form-control form-controls"})
            </div>
        </div>
        <br />
        <div></div>
        <div class="row">
            @foreach (var even in Model.Eventos)
            {
                <div class="container image">
                    <div class="cards">
                        <a href="@Url.Action("Index", "Tickets", new {id = even.ID })">
                            <img class="image" src="@even.UrlImg" />
                        </a>
                        <p>@even.Titulo</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-3">
        <div id="calendario"></div>
        <div class="row">
            <div class="col-lg-4">
                <img style="width:17rem;" src="~/img/millas-tn.jpg" />
            </div>
        </div>
    </div>
</div>




@section Scripts{
<script type="text/javascript">
    $(document).ready(function() {
     $("#calendario").simpleCalendar({
         months:['ENERO','FEBRERO','MARZO','ABRIL','MAYO','JUNIO','JULIO','AGOSTO','SEPTIEMBRE','OCTUMBRE',
         'NOVIEMBRE','DICIEMBRE'],
         days:['Do','Lu','Ma','Mi','Ju','Vi', 'Sa'],
       displayYear: false,
     });
    });

</script>

}